<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Snake</name>
    <description>
        A simple snake game
    </description>
    <author email="erbuka@hotmail.com" href="https://www.erbuka.com">
        Andrea Bucaletti
    </author>
    <content src="index.html" />

    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-media"/>

    <access origin="*" />

    <platform name="android">
        <icon src="www/img/logo.png" />
    </platform>
    <platform name="ios">
        <icon height="512" platform="ios" src="www/img/logo.png" width="512" />
    </platform>
    <platform name="wp8">
        <icon height="512" platform="wp8" src="www/img/logo.png" width="512" />
    </platform>
    <platform name="windows">
        <icon height="512" platform="windows" src="www/img/logo.png" width="512" />
    </platform>

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
